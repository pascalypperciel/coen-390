<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MinicapApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.MinicapApp" parent="Base.Theme.MinicapApp" />

    <!-- CAT Tester Theme (Light Mode) -->
    <!-- Bottom Navigation Bar Theme -->
    <style name="Theme.Navbar" parent="Base.Theme.MinicapApp">
        <item name="android:background">@color/navbar_colour</item>
    </style>

    <!-- Fragment Background -->
    <style name="Theme.FragmentBackground" parent="Base.Theme.MinicapApp">
        <item name="android:background">@color/background_colour</item>
    </style>

    <!-- Fragment Buttons -->
    <style name="Theme.FragmentButton" parent="Base.Theme.MinicapApp">
        <item name="colorPrimary">@color/button_colour</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="elevation">4dp</item>
    </style>

    <!-- Fragment Card Style -->
    <style name="Theme.FragmentCard" parent="Base.Theme.MinicapApp">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="android:textColor">@color/text_colour</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
    </style>

</resources>