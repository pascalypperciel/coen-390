<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_gravity="center_vertical">

    <TextView
        android:id="@+id/textViewListItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="TextView"
        android:textColor="@color/text_colour"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewListItemTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:text="TextView"
        android:textColor="#A9A9A9" />

    <TextView
        android:id="@+id/textViewListItemTestType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="50dp"
        android:text="TextView"
        android:textColor="#A9A9A9" />

    <ImageButton
        android:id="@+id/imageButtonMoreDetails"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="375dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/circular_button_background"
        android:src="@drawable/baseline_keyboard_arrow_right_24"
        android:scaleType="fitCenter"
        android:padding="5dp"
        android:theme="@style/Theme.FragmentButton"/>

    <TextView
        android:id="@+id/textViewMaterialType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textColor="#A9A9A9" />
</FrameLayout>